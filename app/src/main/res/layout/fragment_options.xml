<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#2AC6BDBB"
    android:layout_height="match_parent"
    tools:context=".OptionsFragment">


<LinearLayout

    android:layout_marginTop="15dp"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<ImageView
    android:id="@+id/img"
    android:layout_width="24dp"
 android:layout_marginLeft="15dp"
android:layout_gravity="center"
    android:layout_height="24dp"
    android:src="@drawable/ic_arrow_back_black_24dp"
/>
    <TextView
  android:textSize="19dp"
        android:layout_marginLeft="24dp"
        android:textColor="#000000"
        android:textStyle="bold"
android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FITNESS VIDEOS"
        />

</LinearLayout>

    <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout

    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_marginTop="17dp"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="1.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPlus"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:fontFamily="sans-serif-condensed-medium"
                android:padding="6dp"
               android:layout_centerInParent="true"
                android:text="CHEST WORKOUT"
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
android:elevation="4dp"
                android:layout_width="wrap_content"
android:layout_height="wrap_content"
                />

            <ImageView
                android:id="@+id/imageView4"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/chectworkout" />

            <ImageView
                android:layout_width="50dp"
                android:layout_height="53dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"


                android:layout_margin="2dp"
                android:elevation="52dp"
                android:scaleType="centerCrop"
                android:src="@drawable/play_sec" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>
    <LinearLayout
