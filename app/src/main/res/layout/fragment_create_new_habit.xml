<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        tools:context=".habittracker.CreateNewHabitFragment">





        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >


            <LinearLayout
                android:id="@+id/ll_textviews"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
              <ImageView
                  android:layout_width="65dp"
                  android:layout_marginBottom="12dp"
                  android:layout_height="65dp"
                  android:src="@drawable/ic_baseline_calendar_today_24"
                  />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="SELECT REMAINDER"
                    android:layout_marginBottom="19dp"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/et_habitTitle"
                    android:layout_centerInParent="true"
                    android:layout_width="390dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint="Habit title "
                    app:hintTextColor="#000000"
                   android:layout_marginBottom="5dp"
                    app:boxStrokeColor="#000000"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@drawable/ic_baseline_smoking"
                    app:startIconTint="#000000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000000"
                    android:id="@+id/inputEmailsl"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:textColor="#000000"
                        />
                </com.google.android.material.textfield.TextInputLayout>





                <com.google.android.material.textfield.TextInputLayout
                    android:layout_below="@+id/et_habitTitle"
                    android:layout_centerInParent="true"
  android:layout_marginBottom="5dp"
                    android:layout_width="390dp"
                    android:layout_height="wrap_content"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:hint=" Give it a short description"
                    app:hintTextColor="#000000"
                    app:boxStrokeColor="#000000"
                    app:boxStrokeWidthFocused="2dp"
                    app:startIconDrawable="@drawable/ic_baseline_description"
                    app:startIconTint="#000000"
                    app:endIconMode="clear_text"
                    app:endIconTint="#000000"
                    android:id="@+id/et_habitDescription"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:textColor="#000000"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <Button
                    android:id="@+id/btn_pickDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_shape"
                    android:backgroundTint="#1A173A"

                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Pick a date"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/tv_dateSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Date: (not selected)"
                    android:textSize="19sp" />

                <Button
                    android:id="@+id/btn_pickTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/round_shape"
                    android:backgroundTint="#1A173A"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:text="Pick a time"
                    android:textColor="@android:color/white" />

                <TextView
                    android:textColor="#000000"
                    android:id="@+id/tv_timeSelected"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="Time: (not selected)"
                    android:textSize="19sp" />

                <LinearLayout
                    android:id="@+id/layout_tea_smoking_fastfood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_teaSelected"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/tea_selected" />

                    <ImageView
                        android:id="@+id/iv_fastFoodSelected"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/coffe_select" />

                    <ImageView
                        android:id="@+id/iv_smokingSelected"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/smokin_selcted" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">



                </RelativeLayout>

                <Button
                    android:id="@+id/btn_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:backgroundTint="#1A173A"
android:background="@drawable/round_shape"
                    android:text="Confirm"
                    android:textColor="@android:color/white" />


            </LinearLayout>

        </ScrollView>


    </RelativeLayout>