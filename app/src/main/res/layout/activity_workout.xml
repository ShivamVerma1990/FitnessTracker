<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".workout.WorkoutActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_workout"
        android:backgroundTint="@color/white"
      app:title="WORKOUT"
        app:titleMarginStart="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_below="@+id/toolbar_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/main_screen_main_layout_padding"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_workout">

        <ImageView
            android:layout_marginTop="12dp"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:src="@drawable/logo"
            android:contentDescription="@string/todok" />

        <Button
            android:id="@+id/llstart"
            android:layout_width="194dp"
            android:layout_height="83dp"
            android:layout_marginTop="70dp"

            android:background="@drawable/round_shape"
            android:text="Start"
            android:textColor="#fff"
            android:textSize="20dp" />


    </LinearLayout>



</RelativeLayout>
</layout>